<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="it.polimi.ingsw" level="WARNING" />
    <logger name="it.polimi.ingsw.tests" level="ERROR" />

    <root level="warning">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>